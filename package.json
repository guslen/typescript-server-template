{
  "name": "typescript-server-template",
  "version": "1.0.0",
  "description": "can be copied for new typescript server projects",
  "author": "Gustav Lennart Voigt",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "build": "npm run build:production",
    "build:production": "ts-node build.ts --buildEnv production",
    "build:development": "ts-node build.ts --buildEnv development",
    "test": "npm run test:unit",
    "test:unit": "jest",
    "lint:types": "tsc --noEmit",
    "lint:test": "eslint --no-fix --max-warnings 0 --ext .ts .",
    "lint:fix": "eslint --fix --max-warnings 0 --ext .ts .",
    "lint": "npm run lint:types && npm run lint:test"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "29.2.4",
    "esbuild": "0.15.18",
    "typescript": "4.9.3",
    "ts-node": "10.9.1",
    "eslint": "8.29.0",
    "@typescript-eslint/eslint-plugin": "5.46.0",
    "@typescript-eslint/parser": "5.45.0",
    "prettier": "2.8.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.2",
    "ts-jest": "29.0.3",
    "jest": "29.3.1"
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2021
    },
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src(.*)$": "<rootDir>/src/$1"
    }
  }
}
